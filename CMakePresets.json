{
  "version": 4,
  "cmakeMinimumRequired": {
    "major": 3,
    "minor": 23,
    "patch": 0
  },
  "configurePresets": [
    {
      "name": "_debug",
      "description": "Base preset for debug configurations.",
      "hidden": true,
      "cacheVariables": {
        "CMAKE_BUILD_TYPE": "Debug",
        "BUILD_SHARED_LIBS": "ON",
        "ENABLE_PYTHON_EXTENSION": "ON",
        "SOKOENGINEPYEXT_DEBUG": "1"
      }
    },
    {
      "name": "_debug_clang",
      "hidden": true,
      "description": "Base preset for debug configurations with Clang compiler. Without this, debugging from VSCode doesn't show symbols, only addresses. See https://code.visualstudio.com/docs/cpp/faq-cpp#_how-do-i-enable-debug-symbols",
      "inherits": ["_debug"],
      "cacheVariables": {
        "CMAKE_CXX_FLAGS_DEBUG": "--debug -fstandalone-debug"
      }
    },
    {
      "name": "_release",
      "description": "Base preset for release configurations.",
      "hidden": true,
      "cacheVariables": {
        "CMAKE_BUILD_TYPE": "RelWithDebInfo",
        "BUILD_SHARED_LIBS": "ON",
        "ENABLE_PYTHON_EXTENSION": "ON",
        "SOKOENGINEPYEXT_DEBUG": "0"
      }
    },
    {
      "name": "_gcc",
      "description": "Base preset for compiling with gcc.",
      "hidden": true,
      "cacheVariables": {
        "CMAKE_C_COMPILER": "/usr/bin/gcc",
        "CMAKE_CXX_COMPILER": "/usr/bin/g++"
      }
    },
    {
      "name": "_clang",
      "description": "Base preset for compiling with Clang.",
      "hidden": true,
      "cacheVariables": {
        "CMAKE_C_COMPILER": "/usr/bin/clang",
        "CMAKE_CXX_COMPILER": "/usr/bin/clang++"
      }
    },
    {
      "name": "_make",
      "description": "Base preset for Make generator.",
      "hidden": true,
      "generator": "Unix Makefiles",
      "binaryDir": "${sourceDir}/build/${presetName}"
    },
    {
      "name": "_ninja",
      "description": "Base preset for Ninja generator.",
      "hidden": true,
      "generator": "Ninja",
      "binaryDir": "${sourceDir}/build/${presetName}"
    },
    {
      "name": "debug",
      "description": "Generate debug build with gcc and make",
      "inherits": ["_gcc", "_debug", "_make"],
      "cacheVariables": {
        "CMAKE_INSTALL_PREFIX": "${sourceDir}/build/dev_installs/${presetName}"
      }
    },
    {
      "name": "release",
      "description": "Generate release build with gcc and ninja",
      "inherits": ["_gcc", "_release", "_ninja"]
    },
    {
      "name": "vscode",
      "description": "Generate VSCode debug build with clang and ninja",
      "inherits": ["_clang", "_debug_clang", "_ninja"]
    }
  ]
}
